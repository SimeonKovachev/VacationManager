@model IEnumerable<VacationManager.Entity.Leader>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center mt-3">Leaders</h2>
<div class="mt-3">
    <div class="card mb-4">
        <div class="card-header">

            <div class="d-flex justify-content-sm-between align-items-center">
                <div class="d-flex justify-content-start">
                    <h5 style="margin-bottom:0;"><i class="fas fa-table me-1"></i>Leaders Managment</h5>
                </div>
                <a href="@Url.Action("Create", "Leaders")" class="btn btn-success">Create New</a>
            </div>

        </div>
        <div class="card-body">
            <table class="table" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Age)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Profession)
                        </th>
                        <th>
                            Actions
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Profession)
                            </td>
                            <td class="btn-group" role="group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>


</div>
<div class="d-flex justify-content-center align-items-center">
    <a type="button" class="btn btn-sm btn-primary p-2 fw-bold text-white" href="@Url.Action("Index","Dashboard")">Back to Dashboard</a>
</div>
