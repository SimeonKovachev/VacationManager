@model VacationManager.Entity.Vacation

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-lg mt-3">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Delete Vacation</h3></div>
                <div class="card-body mx-5">
                    <h5 class="alert alert-danger">
                        Are you sure you want to delete this?
                    </h5>
                    <div>

                        <hr />
                        <dl class="row">
                            <div class="col-sm-3">
                                <dt class="text-primary">Start Date</dt>
                                <dd>@Html.DisplayFor(model => model.StartDate)</dd>
                            </div>
                            <div class="col-sm-3">
                                <dt class="text-primary">End Date</dt>
                                <dd>@Html.DisplayFor(model => model.EndDate)</dd>
                            </div>
                            <div class="col-sm-3">
                                <dt class="text-primary">Vacation Type</dt>
                                <dd>@Html.DisplayFor(model => model.Type)</dd>
                            </div>
                        </dl>
                    </div>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Index", "Vacations")" class="btn btn-outline-primary"><i class="fa-solid fa-chevron-left"></i> Back to List</a>
                        <button type="submit" class="btn btn-danger"> <i class="fa-solid fa-trash-can"></i></button>
                    </div>
                </div>
            </div>
        </div>


    </div>
}
