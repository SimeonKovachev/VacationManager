@model IEnumerable<VacationManager.Entity.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">
    <div class="card mb-4">
        <div class="card-header">

            <div class="d-flex justify-content-sm-between align-items-center">
                <div class="d-flex justify-content-start">
                    <h5 style="margin-bottom:0;"><i class="fas fa-table me-1"></i>Teams Managment</h5>
                </div>
                <a href="@Url.Action("Create", "Teams")" class="btn btn-success">Create New</a>
            </div>

        </div>
        <div class="card-body">
            <table class="table" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            Leader Name
                        </th>
                        <th>
                            Worker Name
                        </th>
                        <th>
                            Project Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumOfWorkers)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Leader.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Worker.FullName)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Project.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumOfWorkers)
                            </td>
                            <td class="btn-group" role="group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>


</div>